{
  "name": "noweh/twitter-api-v2-php",
  "description": "This library provide methods for sending messages to Twitter and receiving statuses.",
  "minimum-stability": "dev",
  "type": "library",
  "keywords": [
    "twitter",
    "PHP",
    "API"
  ],
  "require": {
    "ext-curl": "*",
    "ext-json": "*",
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^6.5.8",
    "guzzlehttp/oauth-subscriber": "^0.6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6.3",
    "vlucas/phpdotenv": "^v5.5.0",
    "phpstan/phpstan": "^1.9.14"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Julien Schmitt",
      "email": "jschmitt95@protonmail.com"
    }, {
      "name": "Martin Zeitler",
      "homepage": "https://github.com/syslogic"
    }
  ],
  "autoload": {
    "psr-4": {
      "Noweh\\TwitterApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Noweh\\TwitterApi\\Test\\": "test"
    }
  },
  "scripts": {
    "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --bootstrap vendor/autoload.php --configuration phpunit.xml --testsuite main",
    "test": "vendor/bin/phpunit --bootstrap vendor/autoload.php --configuration phpunit.xml --testsuite main"
  },
  "scripts-descriptions": {
    "coverage": "Run PHPunit tests with code coverage (Linux)",
    "test": "Run PHPunit tests"
  }
}
